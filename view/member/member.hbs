<!DOCTYPE html>
<html>
  <head>
    {{> head}}
    <link rel="stylesheet" href="{{baseUrl}}css/member.css" />
	</head>
	<body>
    {{> header}}
    <div class="container-fluid">
      {{#each members}}
      <div class="block">
        <hr><h3 class="title">{{@key}}</h3><hr>
        {{#each this}}
        <h3>{{@key}}</h3>
          {{#each this}}
            {{#ifCond @index '!%' 3}} <div class="row"> {{/ifCond}}
            <div class="col-md-4">
              <div class="photo" style="background-image:url({{baseUrl}}/images/members/{{this.image}});"></div>
              <div class="subtitle">
                {{this.name_ch}} <br/>
                {{#if this.name_en}} ({{this.name_en}}) {{/if}}
              </div>
              {{#if this.paper}}
                <div class="row comment">
                  <div class="col-md-3">論文題目</div>
                  <div class="col-md-9">{{this.paper}}</div>
                </div> 
              {{/if}}
              {{#if this.job}}
                <div class="row comment">
                  <div class="col-md-3">出路</div>
                  <div class="col-md-9">{{this.job}}</div>
                </div>
              {{/if}}
            </div>
            {{#if @last}} </div> {{/if}}
            {{#ifCond @last '==' ''}} {{#ifCond @index '!+%' 3}} </div> {{/ifCond}} {{/ifCond}}
          {{/each}}
        {{/each}}
      </div> <!-- /.block -->
      {{/each}}
    </div> <!-- /.container-fluid -->
    {{> footer }}
  </body>
</html>

